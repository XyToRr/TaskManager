<Window x:Class="TaskManager.AddTaskToProjWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Нове завдання" Height="720" Width="1280"
        Background="{StaticResource BackgroundBrush}"
        WindowState="Maximized"
        >
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Додавання завдання" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>
            <Grid Width="600">
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Логін працівника" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>
                    <TextBox FontSize="24"></TextBox>
                    <TextBlock Text="Працівники" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>
                    <ListBox  FontSize="24" Height="250"></ListBox>
                    <CheckBox FontSize="24" HorizontalAlignment="Center" VerticalContentAlignment="Center" Content="Адмін" Margin="0,20"/>
                    <Button Width="200" Content="Додати"></Button>

                </StackPanel>

                <!--<StackPanel Grid.Column="1">
                    
                    <TextBlock Text="Пріоріитет" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>
                    <ComboBox Width="200"></ComboBox>
                    <TextBlock Text="Дедлайн" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>
                    <DatePicker Width="200" FontSize="24"></DatePicker>
                    <TextBlock Text="Виконавець" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>

                    <ComboBox Width="200"></ComboBox>
                </StackPanel>-->

            </Grid>
        </StackPanel>
    </Grid>
</Window>
