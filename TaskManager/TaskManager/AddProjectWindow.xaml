<Window x:Class="TaskManager.AddProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="AddProjectWindow" Height="450" Width="800">
    <Grid>

        <StackPanel>
            <TextBlock Text="Add Project" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>
            <TextBlock Text="Name" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>

            <TextBox x:Name="NameBox"></TextBox>
            <TextBlock Text="Description" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>
            <TextBox x:Name="DescriptionBox"></TextBox>
            <Button Margin="10" Content="Додати проект" Click="AddProjectButton_Click"></Button>
        </StackPanel>
        
        
    </Grid>
</Window>
