<Window x:Class="TaskManager.AddProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Додавання проекту" Height="500" Width="800"
        Background="{StaticResource BackgroundBrush}" Closed="Window_Closed"
        >
    <Grid>

        <StackPanel Margin="20">
            <TextBlock Text="Додавання проекту" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>
            <TextBlock Text="Ім'я" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>

            <TextBox x:Name="NameBox"></TextBox>
            <TextBlock Text="Опис" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20"/>
            <TextBox x:Name="DescriptionBox"></TextBox>
            <Button Margin="10,30" Width="200" FontSize="18" Content="Додати проект" Click="AddProjectButton_Click"></Button>
        </StackPanel>
        
        
    </Grid>
</Window>
