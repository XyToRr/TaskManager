<Window x:Class="TaskManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="450">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="30">
            <Label Content="Login" FontSize="15"/>
            <TextBox x:Name="LoginTextBox" Margin="5 0"/>
            <Label Content="Password" FontSize="15"/>
            <TextBox x:Name="PasswordTextBox" Margin="5 0"/>

            <Button Content="Login" Margin="20" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
