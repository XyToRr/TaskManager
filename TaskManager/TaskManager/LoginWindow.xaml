<Window x:Class="TaskManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      
        xmlns:local="clr-namespace:TaskManager"
        
        Background="{StaticResource BackgroundBrush}"
        Title="Login" Height="300" Width="450"  
 
        >
        
       
        <Grid>
        <StackPanel Orientation="Vertical" Margin="30">
            <Label Content="Логін"/>
            <TextBox x:Name="LoginTextBox" />
            <Label Content="Пароль" />
            <TextBox x:Name="PasswordTextBox" />


            <!--<StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center" >
                <Button Content="Вхід"    Click="LoginButton_Click"/>
                <Button Content="Реєстрація"   Click="LoginButton_Click"/>
            </StackPanel>-->

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Вхід"   Margin="10" Click="LoginButton_Click" Grid.Column="0"/>
                <Button Content="Реєстрація" Margin="10"  Click="RegisterButton_Click" Grid.Column="1"/>
            </Grid>
            
            
            
        </StackPanel>
    </Grid>
</Window>
