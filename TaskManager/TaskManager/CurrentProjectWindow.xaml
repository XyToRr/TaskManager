<Window x:Class="TaskManager.CurrentProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="Проект..." Height="450" Width="800"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*" />
            <ColumnDefinition Width="0.3*" />
        </Grid.ColumnDefinitions>

        <!-- ListView для відображення завдань -->
        <ScrollViewer Grid.Row="0">
            <ListView Background="{StaticResource BackgroundBrush}"
                      x:Name="TasksListView"
                      ItemsSource="{Binding Tasks}"
                      HorizontalContentAlignment="Stretch"
                      FontSize="20">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="5"
                                BorderBrush="{StaticResource BorderBrush}"
                                Padding="10"
                                CornerRadius="10"
                                Margin="10"
                                HorizontalAlignment="Stretch">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5">
                                    <TextBlock Foreground="{StaticResource AccentBrush}" FontWeight="Bold" FontSize="36" Text="{Binding Name}" />
                                    <TextBlock Text="Created By:" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                                    <TextBlock Foreground="{StaticResource AccentBrush}" Text="{Binding CreatedBy}" FontSize="24"/>
                                    <TextBlock Text="Description:" FontSize="24" FontWeight="Bold" Margin="0,5,0,0"/>
                                    <TextBlock Foreground="{StaticResource HoverBrush}" Text="{Binding Description}" FontSize="16" TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">
                                    <TextBlock FontSize="36" Text="Priority" HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding Priority}" Foreground="{StaticResource AccentBrush}" FontSize="48" FontWeight="Bold" HorizontalAlignment="Right"/>
                                    <TextBlock FontSize="24" Text="Status:" HorizontalAlignment="Right"/>
                                    <ComboBox ItemsSource="{Binding DataContext.Statuses, RelativeSource={RelativeSource AncestorType=Window}}"
                                              SelectedItem="{Binding Status, Mode=TwoWay}"
                                              FontSize="24"
                                              Foreground="{StaticResource AccentBrush}"
                                              Width="200"
                                              HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>


        <StackPanel Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <Button Content="Add User"  Margin="5"/>
            <Button Content="Add Task"  Margin="5" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
