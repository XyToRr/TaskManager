<Window x:Class="TaskManager.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="Реєстрація" Height="500" Width="400"
        Background="{StaticResource BackgroundBrush}">
        Title="RegisterWindow" Height="500" Width="400"
        >
    <Grid>
        <StackPanel Orientation="Vertical" Margin="30">
            <Label Content="Логін" />
            <TextBox x:Name="LoginTextBox" />
            <Label Content="Пароль" />
            <TextBox x:Name="PasswordTextBox" />
            <Label Content="Повторіть пароль" />
            <TextBox x:Name="PasswordRepeatTextBox" />
            <Label Content="Ім'я" />
            <TextBox x:Name="FirstNameTextBox" />
            <Label Content="Прізвище" />
            <TextBox x:Name="LastNameTextBox" />
            <Button Content="Зареєструватись" Margin="80,20" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
