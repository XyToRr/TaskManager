<Window x:Class="TaskManager.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="360" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="30">
            <Label Content="Login" FontSize="15"/>
            <TextBox x:Name="LoginTextBox" Margin="5 0"/>
            <Label Content="Password" FontSize="15"/>
            <TextBox x:Name="PasswordTextBox" Margin="5 0"/>
            <Label Content="Password repeat" FontSize="15"/>
            <TextBox x:Name="PasswordRepeatTextBox" Margin="5 0"/>
            <Label Content="First name" FontSize="15"/>
            <TextBox x:Name="FirstNameTextBox" Margin="5 0"/>
            <Label Content="Last name" FontSize="15"/>
            <TextBox x:Name="LastNameTextBox" Margin="5 0"/>
            <Button Content="Register" Margin="20"/>
        </StackPanel>
    </Grid>
</Window>
